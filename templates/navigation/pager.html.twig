{#
/**
 * @file
 * Кастомный шаблон для пейджера, стилизованный под Bootstrap 5.
 */
#}
{% if items %}
  <nav class="pager-nav" role="navigation" aria-labelledby="pagination-heading">
    <h4 id="pagination-heading" class="visually-hidden">{{ 'Pagination'|t }}</h4>
    <ul class="pagination justify-content-center">

      {# Кнопка "Первая" #}
      {% if items.first %}
        <li class="page-item">
          <a href="{{ items.first.href }}" title="{{ 'Go to first page'|t }}" class="page-link" aria-label="{{ 'First page'|t }}">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
      {% endif %}

      {# Кнопка "Предыдущая" #}
      {% if items.previous %}
        <li class="page-item">
          <a href="{{ items.previous.href }}" title="{{ 'Go to previous page'|t }}" rel="prev" class="page-link" aria-label="{{ 'Previous page'|t }}">
            <span aria-hidden="true">&lsaquo;</span>
          </a>
        </li>
      {% endif %}

      {# Номера страниц #}
      {% for key, item in items.pages %}
        <li class="page-item {{ current == key ? 'active' : '' }}">
          {% if current == key %}
            <span class="page-link">
              {{ key }}
              <span class="visually-hidden">(current)</span>
            </span>
          {% else %}
            <a href="{{ item.href }}" title="{{ 'Go to page @key'|t({'@key': key}) }}" class="page-link">
              {{ key }}
            </a>
          {% endif %}
        </li>
      {% endfor %}

      {# Кнопка "Следующая" #}
      {% if items.next %}
        <li class="page-item">
          <a href="{{ items.next.href }}" title="{{ 'Go to next page'|t }}" rel="next" class="page-link" aria-label="{{ 'Next page'|t }}">
            <span aria-hidden="true">&rsaquo;</span>
          </a>
        </li>
      {% endif %}

      {# Кнопка "Последняя" #}
      {% if items.last %}
        <li class="page-item">
          <a href="{{ items.last.href }}" title="{{ 'Go to last page'|t }}" class="page-link" aria-label="{{ 'Last page'|t }}">
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
      {% endif %}

    </ul>
  </nav>
{% endif %}