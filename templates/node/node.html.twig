{#
 * @file
 * Кастомный шаблон для вывода материалов (нод).
 * Добавляет полезные CSS-классы для гибкой стилизации.
 #}
{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
  ]
%}
<article{{ attributes.addClass(classes) }}>

  {{ title_prefix }}
  {% if not page %}
    <h2{{ title_attributes }}>
      <a href="{{ url }}" rel="bookmark">{{ label }}</a>
    </h2>
  {% endif %}
  {{ title_suffix }}

  {# 
 * Мы полностью заменяем стандартный вывод, чтобы оставить только дату.
 * Мы также убираем author_picture и metadata, так как они нам не нужны.
 #}
{% if display_submitted %}
  <footer>
    <div{{ author_attributes.addClass('node__submitted') }}>
      {# Просто выводим переменную с датой, убирая всё лишнее #}
      {{ date }}
    </div>
  </footer>
{% endif %}

  <div{{ content_attributes.addClass('node__content') }}>
    {{ content }}
  </div>

</article>