{#
 * @file
 * Кастомный шаблон для тизеров на страницах таксономии.
 * Структура: картинка слева, контент справа.
 * themes/your_theme/templates/node--teaser.html.twig
 #}
{# Добавляем наш новый класс 'term-card' к основной обертке <article> #}
<article{{ attributes.addClass('term-card') }}>

  {# --- ЛЕВАЯ КОЛОНКА: ИЗОБРАЖЕНИЕ --- #}
  {# ВАЖНО: Весь блок div выводится только, если поле field_image НЕ пустое #}
  {% if content.field_image %}
    <div class="term-card__image">
      {{ content.field_image }}
    </div>
  {% endif %}

  {# --- ПРАВАЯ КОЛОНКА: ТЕКСТ --- #}
  <div class="term-card__content">



    {# --- ЗАГОЛОВОК --- #}
    <h3{{ title_attributes.addClass('term-card__title') }}>
      <a href="{{ url }}" rel="bookmark">{{ label }}</a>
    </h3>

    {# --- ДАТА --- #}
    <div class="term-card__date">
      {{ node.getCreatedTime|format_date('custom', 'd F Y') }}
    </div>

    {# --- ТИЗЕР ТЕКСТА И ДРУГИЕ ПОЛЯ --- #}
    {# 'content|without' позволяет вывести всё содержимое, КРОМЕ полей, которые мы уже вывели вручную #}
    <div class="term-card__body">
      {{ content|without('field_image', 'field_tags') }}
    </div>

    {# --- ТЕГИ --- #}
    {# 'field_tags' - это системное имя вашего поля с тегами #}
    {% if content.field_tags %}
      <div class="term-card__tags">
        {{ content.field_tags }}
      </div>
    {% endif %}

  </div>

</article>